<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.springbootmybaistcrud.mapper.EmpMapper">
    <update id="update">
        update emp
        set
        <if test="username != null">
            username=#{username},
        </if>
        <if test="name != null">
            name=#{name},
        </if>
        <if test="gender != null">
            gender=#{gender},
        </if>
        <if test="image != null">
            image=#{image},
        </if>
        <if test="job != null">
            job=#{job},
        </if>
        <if test="entrydate != null">
            entrydate=#{entrydate},
        </if>
        <if test="deptId != null">
            dept_id=#{deptId},
        </if>
        <if test="updateTime != null">
            update_time=#{updateTime}
        </if>
        where id=#{id}
    </update>

    <!--查询操作-->
<select id="list" resultType="org.example.springbootmybaistcrud.pojo.Emp">
    select * from emp
    where name like concat('%',#{name},'%')
    and gender = #{gender}
    and entrydate between #{begin} and #{end}
    order by update_time desc
</select>
</mapper>